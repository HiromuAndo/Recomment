<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>プロフィール</h2>
	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpeg", fallback:"no_image.jpg" %>
	<h3><%= @user.name %></h3>
	<div class="table-responsive">
	<table class="table">
			<tr>
				<th>自己紹介</th>
				<th><%= @user.introduction %></th>
			</tr>
	</table>
	</div>
		<% if @user.id == current_user.id %>
			<p><%= link_to "プロフィール編集", edit_user_path(@user), class:"btn btn-primary btn-block" %></p>
		<% end %>
</div>
</div>
</div>