<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        	<div class="form-header text-center">
        		<h2 class="form-header-title">プロフィール編集</h2>
        	</div>
        	<div class="form-body">
        		<%= form_for(@user, html:{class: "form-horizontal"}) do |f|%>
        			<div class="form-group">
        				<label class="col-sm-4 control-label">名前</label>
        				<div class="col-sm-8">
        					<%= f.text_field :name, autofocus: true, class:"form-control" %>
        				</div>
        			</div>
        			<div class="form-group">
        				<label class="col-sm-4 control-label">プロフィール画像</label>
					    <div class="col-sm-8">
					        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
					    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
					    </div>
					</div>
					<div class="form-group">
			            <label class="col-sm-4 control-label">自己紹介</label>
			            <div class="col-sm-8">
			            	<%= f.text_area :introduction, class:"form-control" %>
			            </div>
			        </div>
        			<%= f.submit "変更を保存", class:"btn btn-primary btn-lg btn-block" %>
        		<% end %>
        		<%= link_to "退会", "/users/#{current_user.id}/unregister", class: "pull-right" %>
        	</div>
        </div>
    </div>
</div>