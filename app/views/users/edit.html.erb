<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
        	<div class="text-center">
        		<h2>プロフィール編集</h2>
        	</div>
        	<div>
        		<%= form_for(@user, html:{class: "form-horizontal"}) do |f|%>
                    <% if @user.errors.any? %>
                      <div id="error_explanation">
                        <h3><%= @user.errors.count %>件のエラーが発生しました。</h3>
                        <ul>
                        <% @user.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
        			<div class="form-group">
        				<label class="col-sm-4 control-label">名前</label>
        				<div class="col-sm-8">
        					<%= f.text_field :name, autofocus: true, class:"form-control" %>
        				</div>
        			</div>
        			<div class="form-group">
        				<label class="col-sm-4 control-label">プロフィール画像</label>
					    <div class="col-sm-8">
					        <%= attachment_image_tag @user, :profile_image, size: "100×100", fallback: "/images/no_image.jpg"%>
					    	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
					    </div>
					</div>
					<div class="form-group">
			            <label class="col-sm-4 control-label">自己紹介</label>
			            <div class="col-sm-8">
			            	<%= f.text_area :introduction, class:"form-control" %>
			            </div>
			        </div>
        			<%= f.submit "変更を保存", class:"btn btn-primary btn-lg btn-block" %>
        		<% end %>
        		<%= link_to "退会", "/users/#{current_user.id}/unregister", class: "pull-right" %>
        	</div>
        </div>
    </div>
</div>